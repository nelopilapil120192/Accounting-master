	<!-- Bootstrap Core CSS -->
	<link href="~/Content/MainLayout/css/bootstrap.css" rel='stylesheet' type='text/css' />

	<!-- Custom CSS -->
	<link href="~/Content/CreateBooking/css/style.css" rel="stylesheet" type="text/css" />

	<!-- font-awesome icons CSS -->
	<link href="~/Content/MainLayout/css/font-awesome.css" rel="stylesheet">	<!-- //font-awesome icons CSS-->
