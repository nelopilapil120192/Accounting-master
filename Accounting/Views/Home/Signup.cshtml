@model Accounting.Models.UserModel

@{
	Layout = null;
}
<!DOCTYPE html>

<html lang="en">

<head>
	<title>Booking Application Sign up </title>
	<!-- Meta tags -->
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	@* <meta name="keywords" content="Gadget Sign Up Form Responsive Widget, Audio and Video players, Login Form Web Template, Flat Pricing Tables, Flat Drop-Downs, Sign-Up Web Templates, Flat Web Templates, Login Sign-up Responsive Web Template, Smartphone Compatible Web Template, Free Web Designs for Nokia, Samsung, LG, Sony Ericsson, Motorola Web Design" />*@
	<script>
		addEventListener("load", function () { setTimeout(hideURLbar, 0); }, false); function hideURLbar() { window.scrollTo(0, 1); }
	</script>
	<!-- Meta tags -->
	<!-- font-awesome icons -->
	<link href="~/sign_in_sign_up/css/font-awesome.min.css" rel="stylesheet">
	<!-- //font-awesome icons -->
	<!--stylesheets-->
	<link href="~/sign_in_sign_up/css/style.css" rel='stylesheet' type='text/css' media="all">
	<!--//style sheet end here-->
	<link href="//fonts.googleapis.com/css?family=Montserrat:300,400,500,600" rel="stylesheet">
	<link href="//fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">
</head>
<body>
	<br />
	<br />
	@*<h1 class="error">Booking Application Sign up Form</h1>*@
	<!---728x90--->
	<div class="w3layouts-two-grids">
		<!---728x90--->
		<div class="mid-class">
			<div class="img-right-side">
				<h3>We Provide The Best Solution For Your Transport</h3>
				<p>
					Introduction Here .
				</p>
				<img src="~/Views/Home/Images/sampleBG.png" class="img-fluid" alt="">
			</div>
			<br />
			<br />
			<div class="txt-left-side">
				<h2> Sign Up Here </h2>
				@using (Html.BeginForm("SigningUp", "Home", FormMethod.Post)) {
					<div class="form-left-to-w3l">
						<span class="fa fa-user-o" aria-hidden="true"></span>
						@Html.EditorFor(model => model.FirstName,
							new { htmlAttributes =
								new { @type = "text", placeholder = "First Name", required = "required" } })
						<div class="clear"></div>
					</div>
					<div class="form-left-to-w3l">
						<span class="fa fa-user-o" aria-hidden="true"></span>
						@Html.EditorFor(model => model.LastName,
						new { htmlAttributes =
							new { @type = "text", placeholder = "Last Name", required = "required" } })
						<div class="clear"></div>
					</div>
					<div class="form-left-to-w3l">
						<span class="fa fa-phone" aria-hidden="true"></span>
						@Html.EditorFor(model => model.LastName,
							new { htmlAttributes =
								new { @type = "text", placeholder = "Phone" } })
						<div class="clear"></div>
					</div>
					<div class="form-left-to-w3l">
						<span class="fa fa-envelope-o" aria-hidden="true"></span>
						@Html.EditorFor(model => model.UserName,
							new { htmlAttributes =
								new { @type = "email", placeholder = "Email", required = "required" } })
						<div class="clear"></div>
					</div>
					<div class="form-left-to-w3l ">

						<span class="fa fa-lock" aria-hidden="true"></span>
						@Html.EditorFor(model => model.Password,
							new { htmlAttributes =
								new { @type = "password", placeholder = "Password", required = "required" } })
						<div class="clear"></div>
					</div>
					<div class="btnn">
						<button type="submit">Sign Up </button>
					</div>
				}
				<div class="w3layouts_more-buttn">
					<h3>
						Have an account?
						<a href="Login">
							Login Here
						</a>
					</h3>
				</div>
				<div class="clear"></div>
			</div>
		</div>
	</div>
	<!---728x90--->
	<footer class="copyrigh-wthree">
		<p>
			© 2020 Booking Application. All Rights Reserved
		</p>
	</footer>
</body>

</html>